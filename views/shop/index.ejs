<%- include('/Users/hp/Desktop/express/views/includes/head.ejs') %>
    <link rel="stylesheet" href="/css/main.css">
    
</head>
<body>
  <%- include('/Users/hp/Desktop/express/views/includes/navigation.ejs') %>
  <main>
    <% if (prods.length > 0) { %>
      <h1>My Product</h1>
        <p>List of all the products...</p>
           <div class="grid">
            <% for (let product of prods){ %>
            <article class = "card product-item">
              <header class="card__header">
                <h1 class="product__title"><%= product.title %></h1>
              </header>
              <div class="card__image">
                <img src="<%= product.imageUrl %>" alt="product.title">
              </div>
              <div class="card__content">
                <h2 class="product__price">$<%= product.price %> </h2>
                <p class="product__description"><%= product.description %> </p>
              </div>
              <div class="card__actions">
                <%- include('/Users/hp/Desktop/express/views/includes/add-to-cart.ejs',{product: product}) %>
              </div>
           </article>
         </div> <% } %>
    <% } else {%>
     <h1>No Product found</h1>    
    <% }%>
  </main>
  <%- include('/Users/hp/Desktop/express/views/includes/end.ejs') %>